<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#D3D3D3" /> <!-- Grey background -->
        </shape>
    </item>

    <!-- Progress layer -->
    <item>
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="12dp" />
                <solid android:color="#2563EB" /> <!-- Green progress -->
            </shape>
        </clip>
    </item>
</layer-list>
